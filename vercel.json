{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "ui/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/app.js", "dest": "/ui/app.js" },
    { "src": "/styles.css", "dest": "/ui/styles.css" },
    { "src": "/ui/(.*)", "dest": "/ui/$1" },
    { "src": "/(.*)", "dest": "/ui/index.html" }
  ]
}
