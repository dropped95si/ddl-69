# Supabase
SUPABASE_URL="https://YOURPROJECT.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# Parquet artifact root (local path or s3/r2 later)
ARTIFACT_ROOT="./artifacts"

# Optional: MLflow
MLFLOW_TRACKING_URI="./mlruns"

# Market data providers
POLYGON_API_KEY="YOUR_POLYGON_KEY"
ALPACA_API_KEY="YOUR_ALPACA_KEY"
ALPACA_SECRET_KEY="YOUR_ALPACA_SECRET"
ALPACA_BASE_URL="https://paper-api.alpaca.markets/v2"

# Massive/Polygon flat files (S3)
MASSIVE_ACCESS_KEY="YOUR_MASSIVE_ACCESS_KEY"
MASSIVE_SECRET_KEY="YOUR_MASSIVE_SECRET_KEY"
MASSIVE_S3_ENDPOINT="https://files.massive.com"
MASSIVE_S3_BUCKET="flatfiles"

# Optional Qlib
QLIB_DATA_DIR="C:\\path\\to\\qlib_data"

# Optional: disable rate-limited sources
DISABLE_POLYGON_NEWS="true"
DISABLE_FINVIZ="true"
